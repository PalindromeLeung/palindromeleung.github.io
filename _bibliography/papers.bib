@article{pnas-journal,
author = {Meenakshi Ambati  and Ivana Apicella  and Shao-bin Wang  and Siddharth Narendran  and Hannah Leung  and Felipe Pereira  and Yosuke Nagasaka  and Peirong Huang  and Akhil Varshney  and Kirstie L. Baker  and Kenneth M. Marion  and Mehrdad Shadmehr  and Cliff I. Stains  and Brian C. Werner  and Srinivas R. Sadda  and Ethan W. Taylor  and S. Scott Sutton  and Joseph Magagnoli  and Bradley D. Gelfand },
title = {Identification of fluoxetine as a direct NLRP3 inhibitor to treat atrophic macular degeneration},
